{
  "name": "use-media-recorder",
  "version": "2.0.4",
  "description": "MediaRecorder API using React hooks.",
  "main": "lib/index.js",
  "files": [
    "lib/index.js"
  ],
  "scripts": {
    "start": "NODE_ENV=development BABEL_ENV=development node --max_old_space_size=4096 node_modules/.bin/webpack serve --config webpack.demo.js --host 127.0.0.1 --port 3000 --progress --inline --open",
    "build": "webpack --config webpack.config.js --mode production",
    "prepare": "echo 'Building useMediaRecorder' && npm run build",
    "lint": "eslint src --ext .js,.jsx --fix && eslint demo --ext .js,.jsx --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jagonzalr/useMediaRecorder.git"
  },
  "keywords": [
    "MediaRecorder",
    "Video",
    "Audio",
    "React",
    "Hooks"
  ],
  "author": "Jose Antonio Gonzalez Rodriguez",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jagonzalr/useMediaRecorder/issues"
  },
  "homepage": "https://github.com/jagonzalr/useMediaRecorder#readme",
  "peerDependencies": {
    "react": "^16.x || ^17.x"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-react": "^7.9.4",
    "autoprefixer": "^9.7.6",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "case-sensitive-paths-webpack-plugin": "^2.3.0",
    "core-js": "^3.6.4",
    "css-loader": "^3.5.1",
    "eslint": "^6.8.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-loader": "^4.0.0",
    "eslint-plugin-flowtype": "^4.7.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "html-loader": "^1.1.0",
    "html-webpack-plugin": "^5.2.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.1.2",
    "node-sass": "^4.13.1",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.0.4",
    "pretty-quick": "^2.0.1",
    "react": "^17.0.1",
    "react-dev-utils": "^11.0.3",
    "react-dom": "^17.0.1",
    "react-hot-loader": "^4.12.20",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.2.1",
    "tailwindcss": "^1.2.0",
    "wavesurfer.js": "^3.3.2",
    "webpack": "^5.24.3",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.0"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-syntax-dynamic-import",
      "@babel/plugin-transform-runtime"
    ]
  },
  "lint-staged": {
    "**/*.{js,jsx}": [
      "npm run --silent lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && pretty-quick --staged"
    }
  }
}
